{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/css/",
      "files": [{
        "destination": "tokens.css",
        "format": "css/variables"
        }]
      },
      "json": {
        "transformGroup": "js",
        "buildPath": "dist/json/",
        "files": [
          {
            "format": "json/nested",
            "destination": "tokens.json"
          }
        ]
      },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "dist/scss/",
      "files": [{
        "destination": "tokens.scss",
        "format": "scss/variables"
      }]
    },
    "ts": {
      "transformGroup": "js",
      "buildPath": "dist/js/",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "tokens.js"
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "tokens.d.ts"
        }
      ]
    }
  }
}